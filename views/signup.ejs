<style>
	body {

		background-color: #dee9ff;
	}

	h5 {
		font-family: 'Kaushan Script', cursive;
	}

	.header {

		padding: 60px;
		text-align: center;
		background: #1abc9c;
		color: white;
		align-items: center;
		font-size: 30px;
	}

	.form-icon{

	text-align: center;
    background-color: #24a0ed;
    border-radius: 50%;
    font-size: 40px;
    color: white;
    width: 100px;
    height: 100px;
    margin: auto;
    margin-bottom: 20px;
    line-height: 100px;

	}
