<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body p-4 p-sm-5">
						<div class="form-heading">

							<h2 class="text-center mb-5 "> Registration </h2>
						</div>

					 <!-- <div class="form-icon" type="file">
							<span> <i class="icon icon-user pe-auto"> 		
									<input type="file"  name="userProfile"  id="userProfile" class="form-control"
								id="floatingInput" accept="image/*"> </i> 
							</span>
				
									</div>   -->
						
						<form id="registrationForm"  enctype="multipart/form-data">


							<div class="form-floating mb-3">
								<input type="text" name="username" class="form-control" id="floatingInput"
									placeholder="Enter your name">
								<label for="floatingInput"> Username </label>
							</div>


							<div class="form-floating mb-3">
								<input type="email" name="email" class="form-control" id="floatingInput"
									placeholder="Enter your email">
								<label for="floatingInput">Email address</label>
							</div>

							<div class="form-floating mb-3">
								<input type="file" name="userProfile" id="userProfile" class="form-control"
									id="floatingInput" accept="image/*">
								<label for="floatingInput"> Profile picture </label>
							</div>

							<div class="form-floating mb-3">
								<input type="password" name="password" class="form-control" id="floatingPassword"
									placeholder="Password">
								<label for="floatingPassword">Password</label>
							</div>


							<div class="d-grid">
								<button class="btn btn-primary btn-login text-uppercase fw-bold" type="button" onclick="onFormSubmit1(event)">Sign
									Up</button>

							</div>
							<hr class="my-4">

							<p>
							<div class="form-group">
								<p class="text-center">Already have an account? <a href="/login" id="signup">Sign In
										here</a></p>
							</div>
							</p>

						</form>

						<script>
							async function onFormSubmit1(event) {
								var image = document.forms["registrationForm"]["userProfile"].value;

								if (image == null || image == "") {
									alert("Please select your image");
									// errors.image = true
									// document.getElementById("image_error").innerHTML = imageError;
									submit = false;
								} else {
									
									const formData = new FormData(registrationForm);
									await fetch('/signup', {
										method: 'POST',
										body: formData,
								    })
									
									window.location.href = "/login"
								}
							}   

					</script>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>